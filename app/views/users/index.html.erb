<div class="container">
  <div class="row">
    <div class="col">
      <h1>All users</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <th>User Name:</th>
        </tr>
        <% @users.each do |user|%>
          <tr>
            <td><%= link_to user.name, user_path(user.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
