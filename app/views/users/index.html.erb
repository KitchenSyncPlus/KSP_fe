<div class="row p-3">
  <div class="col-6">
    <h1>All users</h1>
  </div>
  <div class="col-6">
    <%= link_to 'add user', new_user_path,  class: "btn btn-primary" %>
  </div>
</div>
<div class="row">
  <div class="col">
    <table class="table">
      <tr>
        <th>User Name:</th>
      </tr>
      <% @users.each do |user|%>
        <tr>
          <td><%= link_to user.name, user_path(user.id) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
